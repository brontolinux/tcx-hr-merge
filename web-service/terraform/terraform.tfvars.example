# TCX Heart Rate Merger - Terraform Example Configuration
# Static website with client-side processing

# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize as needed

project_name = "tcx-hr-merger"
environment  = "prod"
aws_region   = "eu-west-1"

# Optional: Restrict access to specific IP ranges (CIDR notation)
# Supports both IPv4 and IPv6 addresses
# If empty or not specified, the website is accessible from anywhere
# allowed_ip_ranges = [
#   "203.0.113.0/24",              # Example: Office network (IPv4)
#   "198.51.100.0/24",             # Example: VPN range (IPv4)
#   "192.0.2.1/32",                # Example: Single IPv4 address
#   "2001:db8::/32",               # Example: IPv6 range
#   "2001:db8:1234:5678::1/128"    # Example: Single IPv6 address
# ]

# Optional: Add custom tags
tags = {
  Owner = "your-name"
}
  Purpose = "TCX file merging service"
}
